{
  "$schema": "https://railway.app/railway.schema.json",
  "$service": {
    "source": {
      "repo": "Abduljaleel89/physio",
      "branch": "main",
      "rootDir": "backend"
    }
  },
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build && npx prisma generate"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

